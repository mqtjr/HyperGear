<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
  <div class="container">
    <!-- Brand -->
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
      <i class="fas fa-bolt text-warning me-2 fs-3"></i>
      <span class="fs-4">HyperGear</span>
    </a>
    
    <!-- Mobile toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Left side navigation -->
      <ul class="navbar-nav me-auto">
        <!-- Dynamic Categories Dropdown -->
        <% for (let main in categories) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="<%= main %>Dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-tags me-1"></i><%= main.charAt(0).toUpperCase() + main.slice(1) %>
            </a>
            <ul class="dropdown-menu shadow" aria-labelledby="<%= main %>Dropdown">
              <% categories[main].forEach(sub => { %>
                <li>
                  <a class="dropdown-item" href="/category/<%= main %>/<%= sub.name %>">
                    <i class="fas fa-angle-right text-primary me-2"></i><%= sub.name %>
                  </a>
                </li>
              <% }) %>
            </ul>
          </li>
        <% } %>
        
        <!-- Shopping Link for Users -->
        <% if (user && user.role === "user") { %>
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/shopping">
              <i class="fas fa-shopping-bag me-1"></i>Shop
            </a>
          </li>
        <% } %>
      </ul>

      <!-- Right side navigation -->
      <ul class="navbar-nav">
        <% if (user) { %>
          <!-- Admin Links -->
          <% if (user.role === "admin") { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle fw-semibold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-cog me-1"></i>Admin
              </a>
              <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="adminDropdown">
                <li>
                  <a class="dropdown-item" href="/inventory">
                    <i class="fas fa-boxes text-primary me-2"></i>Inventory
                  </a>
                </li>
                <li>
                  <a class="dropdown-item" href="/addProduct">
                    <i class="fas fa-plus-circle text-success me-2"></i>Add Product
                  </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <a class="dropdown-item" href="/manageUsers">
                    <i class="fas fa-users text-info me-2"></i>Manage Users
                  </a>
                </li>
              </ul>
            </li>
          <% } %>
          
          <!-- Cart -->
          <li class="nav-item">
            <a class="nav-link fw-semibold position-relative" href="/cart">
              <i class="fas fa-shopping-cart me-1"></i>Cart
            </a>
          </li>
          
          <!-- User Profile Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle fw-semibold d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                <i class="fas fa-user text-primary"></i>
              </div>
              <span class="d-none d-md-inline"><%= user.username %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
              <li>
                <h6 class="dropdown-header">
                  <i class="fas fa-user-circle me-1"></i>Hello, <%= user.username %>!
                </h6>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item" href="/profile">
                  <i class="fas fa-user-edit text-primary me-2"></i>My Profile
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/orders">
                  <i class="fas fa-history text-info me-2"></i>Order History
                </a>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item text-danger" href="/logout">
                  <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
              </li>
            </ul>
          </li>
        <% } else { %>
          <!-- Guest Links -->
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/login">
              <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/register">
              <i class="fas fa-user-plus me-1"></i>Sign Up
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
