<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Product Details - HyperGear</title>
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>

    <div class="container my-5">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none">
                        <i class="fas fa-home me-1"></i>Home
                    </a>
                </li>
                <% if (user.role === "admin") { %>
                    <li class="breadcrumb-item">
                        <a href="/inventory" class="text-decoration-none">
                            <i class="fas fa-boxes me-1"></i>Inventory
                        </a>
                    </li>
                <% } else { %>
                    <li class="breadcrumb-item">
                        <a href="/shopping" class="text-decoration-none">
                            <i class="fas fa-shopping-bag me-1"></i>Shop
                        </a>
                    </li>
                <% } %>
                <li class="breadcrumb-item active" aria-current="page">Product Details</li>
            </ol>
        </nav>
        <% if (product) { %>
            <!-- Product Details Card -->
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <!-- Product Image -->
                    <div class="card shadow-sm">
                        <div class="card-body text-center p-4">
                            <img src="../images/<%= product.image %>" 
                                 alt="<%= product.productName %>" 
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 400px; object-fit: contain;">
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <!-- Product Information -->
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-box me-2"></i><%= product.productName %>
                            </h3>
                        </div>
                        <div class="card-body">
                            <!-- Price -->
                            <div class="mb-4">
                                <h2 class="text-success fw-bold">
                                    <i class="fas fa-dollar-sign"></i><%= Number(product.price).toFixed(2) %>
                                </h2>
                            </div>
                            
                            <!-- Stock Status -->
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Stock Availability:</label>
                                <div class="d-flex align-items-center mt-1">
                                    <% if (product.quantity > 0) { %>
                                        <span class="badge bg-success me-2">
                                            <i class="fas fa-check-circle"></i> In Stock
                                        </span>
                                        <span class="text-muted"><%= product.quantity %> units available</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle"></i> Out of Stock
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <!-- Product ID -->
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Product ID:</label>
                                <span class="ms-2 font-monospace">#<%= product.idProducts %></span>
                            </div>
                            
                            <% if (user.role === "user" && product.quantity > 0) { %>
                                <!-- Add to Cart Section -->
                                <hr>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary btn-lg">
                                        <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                    </button>
                                </div>
                            <% } %>
                            
                            <% if (user.role === "admin") { %>
                                <!-- Admin Actions -->
                                <hr>
                                <div class="d-grid gap-2">
                                    <a href="/updateProduct/<%= product.idProducts %>" class="btn btn-warning">
                                        <i class="fas fa-edit me-2"></i>Edit Product
                                    </a>
                                    <button class="btn btn-outline-danger" onclick="confirmDelete()">
                                        <i class="fas fa-trash me-2"></i>Delete Product
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- No Product Found -->
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm text-center">
                        <div class="card-body py-5">
                            <i class="fas fa-exclamation-triangle text-warning display-1 mb-3"></i>
                            <h4 class="card-title">Product Not Found</h4>
                            <p class="card-text text-muted">
                                The product you're looking for doesn't exist or has been removed.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        
        <!-- Navigation Buttons -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <% if (user.role === "admin") { %>
                        <a href="/inventory" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Inventory
                        </a>
                    <% } else { %>
                        <a href="/shopping" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- JavaScript -->
    <script>
        function confirmDelete() {
            if (confirm('Are you sure you want to delete this product? This action cannot be undone.')) {
                // Add delete functionality here
                alert('Delete functionality would be implemented here');
            }
        }
    </script>
</body>
</html>
